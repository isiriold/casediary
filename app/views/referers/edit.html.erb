<div id="left_box">
<% form_for(@referer) do |f| %>
<%= f.error_messages %>
<table class="formstyle">
	<tr>
    		<th><%= f.label :name %></th>
    		<td><%= f.text_field :name %></td>
  	</tr>
  	<tr>
		<th><%= f.label :address %></th>
    		<td><%= f.text_area :address %></td>
  	</tr>
  	<tr>
    		<th><%= f.label :phone_number %></th>
    		<td><%= f.text_field :phone_number %></td>
  	</tr>
  	<tr>
   	 	<th><%= f.label :mobile_number %></th>
    		<td><%= f.text_field :mobile_number %></td>
  	</tr>
  	<tr>
    		<th><%= f.label :mail %></th>
    		<td><%= f.text_field :mail %></td>
  	</tr>
  	<tr>
    		<th><%= f.label :other_details %></th>
    		<td><%= f.text_area :other_details %></td>
  	</tr>
</table>
<div class="button">
	<center><%= f.submit 'Update' %></center>
</div>
<% end %>


