<div id="left_box">
	<div class="box_heading">
		<h3>Firm Details</h3>
	</div>

	<% form_for(@law_firm) do |f| %>
	<%= f.error_messages %>
	<table class="formstyle" width="100%">
	<tr><th><%= f.label :firm_name %></th><td><%= f.text_field :firm_name %></td></tr>
  	<tr><th><%= f.label :address %></th><td><%= f.text_area :address,:rows=>5,:cols=>30 %></td></tr>
  	<tr><th><%= f.label :contact_person %></th><td><%= f.text_field :contact_person %></td></tr>
	<tr><th><%= f.label :phone_number %></th><td><%= f.text_field :phone_number %></td></tr>
  	<tr><th><%= f.label :mobile %></th><td><%= f.text_field :mobile %></td></tr>
	<tr><th><%= f.label :mail %></th><td><%= f.text_field :mail %></td></tr>
 	<tr><th><%= f.label :website %></th><td><%= f.text_field :website %></td></tr>
	</table>
</div>

<div id="right_box">
	   <div class="box_heading"><h3>Lawyer Details</h3></div>
		<%=render :partial=>"/users/register"%>
</div>
<% end %>
<div class="clear"></div>
