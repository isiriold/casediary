<% if @clients.size > 0 %>
<!--<h3><%= @clients_count %> Clients Found</h3>-->
<table class='listing'>
	<tr>
    		<th>Name</div></th>
    		<th>Address</th>
    		<th>Phone number</th>
    		<th>Show</th>
  	</tr>
<% @clients.each do |client| %>
  	<tr class="<%= cycle('odd', 'even')%>">
    		<td class="first"><%=h client.name %></td>
    		<td><%=h client.address %></td>
    		<td><%=h client.phone_number %></td>
    		<td class="last"><%= link_to '<img src="/images/view.gif" title="show"/>', client %></td>
  	</tr>
<% end %>
</table>
<br />
<%else%>
      No clients were returned
<%end%> 
<%if @clients_count > 0%>
 <div id = "pg"> <%=remote_page_links %> </div>
<%end%>
