<div id="show">
<h1>New document</h1>
<table>
<% form_for(@document ||Document.new) do |f| %>
  <%= f.error_messages %>
   <%=f.hidden_field :user_id,:value=>current_user.id%>
   <%=f.hidden_field :case_id,:value=>params[:id]%>

  <tr>
    <th><%= f.label :name %></th>
    <td><%= f.text_field :name %></td>
     <td></td>
     <th><%= f.label :status %></th>
     <td><%=radio_button_tag ('status','pending', checked = false,:value=>"Pending")%>Pending
    &nbsp; &nbsp;<%=radio_button_tag ('status','received', 'checked =false',:value=>"Recieved")%>Recieved
     </td>

    <td><%= f.submit 'Create' %></td>
  </tr>
<% end %>
</table>
</div>
